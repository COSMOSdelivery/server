generator client {
  provider = "prisma-client-js"
}

generator prismaClassGenerator {
  provider = "prisma-class-generator"
  output   = "../src/generated/prisma-client"
  dryRun   = false
}

model Utilisateur {
  id Int @id @default(autoincrement())
  nom String
  prenom String
  nomShop String  
  email String @unique
  gouvernerat String
  ville String
  localite String
  codePostal String
  addresse String
  telephone1 String
  telephone2 String
  codeTVA String
  cin String @unique
  role Role
  dateInscription DateTime 
  derniereMiseAJour DateTime @updatedAt 
}

enum Role{
  UTILISATEUR
  ADMIN 
  LIVREUR
}

